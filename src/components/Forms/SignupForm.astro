---
// components
import Button from "@components/Button/Button.astro";
---

<div
  class=`group max-w-xl relative h-full w-full rounded-2xl bg-gradient-to-br from-primary-400 via-base-300/70 to-base-300/70
  dark:from-primary-500 dark:via-base-300/50 dark:to-base-300/50
  after:absolute after:rounded-[calc(1rem-1px)] after:bg-base-100/30 dark:after:bg-base-800/50 after:inset-[1px]`
>
  <!-- background glow -->
  <div
    class="absolute left-0 top-0 -z-10 mx-auto aspect-square w-[20%] bg-primary-600/70 blur-3xl"
  >
  </div>

  <!-- center card -->
  <div class="relative z-10 p-1">
    <div
      class="flex flex-col gap-5 rounded-xl bg-base-100 px-4 py-10 dark:bg-base-800"
    >
      <h1 class="h2 text-center">Sign Up</h1>
      <!-- login form -->
      <form
        id="signup__form"
        name="signup__form"
        class="mx-auto flex w-full max-w-sm flex-col gap-4"
      >
        <div class="flex w-full flex-col gap-4 xs:flex-row">
          <div>
            <label
              for="signup__fname"
              class="text-sm opacity-90 dark:opacity-80">First Name</label
            >
            <input
              type="text"
              class="form__input mt-0.5"
              name="signup__fname"
              id="signup__fname"
              autofocus
              placeholder=""
              required
            />
          </div>
          <div>
            <label
              for="signup__lname"
              class="text-sm opacity-90 dark:opacity-80">Last Name</label
            >
            <input
              type="text"
              class="form__input mt-0.5"
              name="signup__lname"
              id="signup__lname"
              placeholder=""
              required
            />
          </div>
        </div>
        <div>
          <label for="signup__email" class="text-sm opacity-90 dark:opacity-80"
            >Email</label
          >
          <input
            type="email"
            class="form__input mt-0.5"
            name="signup__email"
            id="signup__email"
            inputmode="email"
            placeholder=""
            required
          />
        </div>
        <div>
          <label
            for="signup__password"
            class="text-sm opacity-90 dark:opacity-80">Password</label
          >
          <input
            type="password"
            class="form__input mt-0.5"
            name="signup__password"
            id="signup__password"
            placeholder=""
            required
          />
        </div>

        <Button variant="primary" type="submit" class="mt-1">Sign Up</Button>
      </form>
      <p class="text-center text-sm">
        <span class="opacity-80"
          >By creating an account you agree to our{" "}</span
        >
        <a
          href="/privacy-policy/"
          class="primary-focus text-primary-600 transition hover:text-primary-500 dark:text-primary-400"
          >Privacy Policy</a
        >
      </p>
    </div>
  </div>
</div>
